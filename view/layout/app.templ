package layout

import (
	"newser.app/view/component"
)

templ App() {
	@Base() {
		<div class="grid-container">
			@component.MainSidebar()
			<main
				hx-get="/desk/articles/update/"
				hx-push-url="false"
				hx-target="this"
				hx-swap="innerHTML"
				hx-trigger="updateArticleList from:body"
			>
				{ children... }
			</main>
			@component.SecondarySidebar()
		</div>
	}
}
