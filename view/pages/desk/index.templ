package desk

import (
	"newser.app/view/layout"
	"newser.app/model"
	"newser.app/view/component"
)

templ Index(articles []*model.Article) {
	@layout.Desk() {
		<div class="container stack">
			if len(articles) > 0 {
				<ul class="card-list">
					for _, article := range articles {
						@component.ArticleListItem(article)
					}
				</ul>
			}
		</div>
	}
}
